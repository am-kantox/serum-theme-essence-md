<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <title><%= @page.title %> - <%= @site.name %></title>
    <link rel="stylesheet" href="<%= asset "css/style.css" %>">
    <link rel="stylesheet" href="<%= asset "css/prism.css" %>">
    <%= include "head-extras" %>
  </head>
  <body>
    <div id="wrapper">
      <header id="top"><%= include "banner" %></header>
      <nav><%= include "nav" %></nav>
      <hr>
      <main><%= @contents %></main>
      <hr>
      <footer>
        <%= include "footer" %>
        <p>
          made with ‚ù§,
          <a href="https://github.com/am-kantox/md">MD</a> markdown parser,
          <a href="https://github.com/am-kantox/serum_md">Serum MD</a> v<%= Application.spec(:serum_md, :vsn) %> static blog engine,
          and <a href="https://github.com/Dalgona/serum-theme-essence-md">Essence MD</a> theme
        </p>
      </footer>
    </div>
    <script src="<%= asset "js/prism.js" %>"></script>
  </body>
</html>
